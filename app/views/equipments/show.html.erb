
<div class="banner-show">
        <h1><%= @equipment.title.upcase%></h1>
</div>

<div class="container py-3">
  <div class="row">
    <div class="col-8">

      <!-- turn this into an alert (warning) -->

      <!-- make a card -->
      <div class="kitesurf p-3">
        <div class="avatar p-4" style="height: 40px; background-image: url('<%= avatar_tag current_user %>')">
        </div>
      <div class="kitesurf-information"></div>
        <p><%= @equipment.owner.first_name %> </p>
        <hr/>

        <h3>Brand</h3><h4><%= @equipment.brand.upcase %></h4>
        <h3>Model</h3><h4><%= @equipment.model.upcase %></h4>
        <h3>Size</h3>
        <h4><%= @equipment.size %>m²</h4>
        <h3>Style</h3>
        <h4><%= @equipment.style.upcase %></h4>
        <hr/>

        <p class=""><strong>Description</strong></p>
        <p><%= @equipment.description %></p>
        <p class=""><strong>Location</strong></p>
        <p><%= @equipment.location %></p>
        <h5 class=""><strong>Price</strong></h5>
        <span><%= @equipment.price %> € per day</span>
      </div>

      <!-- make a card -->
    </div>

    <div class="col-4">

      <div class="bg-white border p-3 sticky-top">

        <%= simple_form_for(@reservation, url: equipment_reservations_path(@equipment), class: 'btn btn-primary w-100') do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :start_date, autofocus: true, html5: true, label: "Date of the booking"%>

          <div class="form-actions">
            <%= f.button :submit, "I reserve this equipment!", :class => 'btn btn-primary w-100' %>
          </div>
        <% end %>

        <div class="d-flex justify-content-between mt-3">
          <p><strong>Price</strong></p>
          <span><%= @equipment.price %> € per day</span>
        </div>
      <div class="photo">
        <%= cl_image_tag(@equipment.photo, :width => 300, :height => 200, :crop => :fill) %>

        </div>
      </div>
    </div>
  </div>
</div>
