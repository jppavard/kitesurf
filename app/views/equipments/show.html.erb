



<div class="bg-dark">
  <div class="container p-5">
    <div class="row">
      <div class="col-8">
        <h1><%= @equipment.title.upcase%></h1>

      </div>
    </div>
  </div>
</div>

<div class="container py-3">
  <div class="row">
    <div class="col-8">


      <!-- turn this into an alert (warning) -->

      <div class="description p-3">
        <h2>DESCRIPTION</h2>
          <div class="d-flex justify-content-between mt-3 col-4">

          </div>
      </div>







      <!-- make a card -->
      <div class="kitesurf p-3">
        <div class="avatar p-4" style="height: 50px; background-image: url('<%= cl_image_path @equipment.owner.avatar %>')">
        </div>


      <div class="kitesurf-information"></div>
        <p><%= @equipment.owner.first_name %> </p>
        <hr/>

        <h3>Brand</h3>
        <h4><%= @equipment.brand.upcase %></h4>
        <h3>Model</h3>
        <h4><%= @equipment.model.upcase %></h4>
        <h3>Size</h3>
        <h4><%= @equipment.size %>m²</h4>
        <h3>Style</h3>
        <h4><%= @equipment.style.upcase %></h4>
        <hr/>

      </div>

      <!-- make a card -->
      <div class="kitesurf-description p-3 ">
        <p class=""><strong>Description</strong></p>
        <p><%= @equipment.description %></p>
        <p class=""><strong>Location</strong></p>
        <p><%= @equipment.location %></p>
        <h5 class=""><strong>Price</strong></h5>
        <span><%= @equipment.price %> € per day</span>
      </div>

      <div class="kitesurf-photo p-3 ">
        <div class="avatar p-4" style="height: 50px; background-image: url('')">


      </div>

      </div>
    </div>

    <div class="col-4">

      <div class="bg-white border p-3 sticky-top">

        <%= simple_form_for(@reservation, url: equipment_reservations_path(@equipment), class: 'btn btn-primary w-100') do |f| %>
          <%= f.error_notification %>


        <div class="d-flex justify-content-between mt-3">
          <label>Date of the booking</label>
        </div>

          <div class="form-inputs">
            <%= f.input :start_date, autofocus: true, html5: true, label: "Date of the booking"%>

          <div class="form-actions">
            <%= f.button :submit, "I reserve this equipment!", :class => 'btn btn-primary w-100' %>
          </div>
        <% end %>


                <!-- <a href="#" class="btn btn-primary w-100">I reserve this equipment!</a> -->

        <div class=" valid-feedback d-flex justify-content-between mt-3 border-bottom">
          <p>Looks good!</p>
        </div>

        <div class="d-flex justify-content-between mt-3">
          <p><strong>Price</strong></p>
          <span><%= @equipment.price %> € per day</span>
        </div>
      <div class="photo">
        <%= cl_image_tag(@equipment.photo, :width => 100, :height => 150, :crop => :fill) %>

        </div>
      </div>
      <!-- /checkout -->
    </div>
  </div>
</div>


