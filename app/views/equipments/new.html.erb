<h2>New</h2>

<%= simple_form_for(@equipment, url: equipments_path()) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :model, autofocus: true%>
    <%= f.input :style, collection: Equipment::CATEGORIES, selected: :first%>

    <%= f.input :location%>
    <%= f.input :size %>
    <%= f.input :brand %>
    <%= f.input :title%>
    <%= f.input :description%>
    <%= f.input :price %>
    <%= f.input :photo%>
    <%= f.input :active%>

  <div class="form-actions">
    <%= f.button :submit, "Let's go !!" %>
  </div>
  </div>

<% end %>
