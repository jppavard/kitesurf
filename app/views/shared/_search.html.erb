<%= form_with(url: equipments_path, method: "get", local: true, html: { class: "search-bar-home" }) do %>
  <%= text_field_tag :location, nil, placeholder: 'where do you want to fly?' , class: 'form-control' %>
  <%= date_field(:reservation, :start_date, class: 'form-control') %>

  <%= select_tag(:style, options_for_select(Equipment::CATEGORIES),class: 'form-control') %>
  <%= range_field :size, :min=>3, :max=>16, :class=>"slide", :id=>"slider1"%>
  <br>
  <%= submit_tag("Search",class: 'btn btn-primary') %>
<% end %>


